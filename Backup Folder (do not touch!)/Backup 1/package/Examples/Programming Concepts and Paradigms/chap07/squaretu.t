% File "squaretu.t".
% Draw a red square of size 30 pixels
% with lower-left corner at center of window.
import Turtle in "turtle.tu"
Turtle.SetColor (red)
Turtle.Move (30)     % Draw first side.
Turtle.TurnLeft (90)
Turtle.Move (30)     % Draw second side.
Turtle.TurnLeft (90)
Turtle.Move (30)     % Draw third side.
Turtle.TurnLeft (90)
Turtle.Move (30)     % Draw fourth side.
